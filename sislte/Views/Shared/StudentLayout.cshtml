@{
    Layout = "_Layout";
}
<!--begin::App Wrapper-->
<div class="app-wrapper">
    <!--begin::Header-->
    <nav class="app-header navbar navbar-expand bg-body">
        <!--begin::Container-->
        <div class="container-fluid">
            <!--begin::Start Navbar Links-->
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" data-lte-toggle="sidebar" href="#" role="button">
                        <i class="bi bi-list"></i>
                    </a>
                </li>
                <li class="nav-item d-none d-md-block"><a href="/" class="nav-link">Home</a></li>
                <li class="nav-item d-none d-md-block"><a href="/Home/Contact" class="nav-link">Contact</a></li>
            </ul>
            <!--end::Start Navbar Links-->
            <!--begin::End Navbar Links-->
            <ul class="navbar-nav">
                <!--begin::Navbar Search-->
                @* <li class="nav-item"> *@
                @*     <a class="nav-link" data-widget="navbar-search" href="#" role="button"> *@
                @*         <i class="bi bi-search"></i> *@
                @*     </a> *@
                @* </li> *@
                <!--end::Navbar Search-->
                <!--begin::Announces Dropdown Menu-->
                <li class="nav-item">
                    <a class="nav-link" href="/Student/Announce">
                        <i class="bi bi-bell"></i>
                    </a>
                </li>
                <!--end::Announces Dropdown Menu-->
                <!--begin::Fullscreen Toggle-->
                <li class="nav-item">
                    <a class="nav-link" href="#" data-lte-toggle="fullscreen">
                        <i data-lte-icon="maximize" class="bi bi-arrows-fullscreen"></i>
                        <i data-lte-icon="minimize" class="bi bi-fullscreen-exit" style="display: none"></i>
                    </a>
                </li>
                <!--end::Fullscreen Toggle-->
                <!--begin::User Menu Dropdown-->
                <li class="nav-item dropdown user-menu">
                    <div class="nav-link">
                        @* <a href="#" class="nav-link dropdown-toggle" data-bs-toggle="dropdown"> *@
                        <img
                            src="~/assets/img/studphoto.jpg"
                            class="user-image rounded-circle shadow"
                            alt="User Image"
                        />
                        <span class="d-none d-md-inline">Sekiro</span>
                    </div>
                    @* </a> *@
                    <ul class="dropdown-menu dropdown-menu-lg dropdown-menu-end">
                        <!--begin::User Image-->
                        <li class="user-header text-bg-primary">
                            <img
                                src="~/assets/img/studphoto.jpg"
                                class="rounded-circle shadow"
                                alt="User Image"
                            />
                            <p>
                                Sekiro
                                <small>Member since Sep. 2010</small>
                            </p>
                        </li>
                        <!--end::User Image-->
                        <!--begin::Menu Body-->
                        <li class="user-body">
                            <!--begin::Row-->
                            <div class="row">
                                <div class="col-4 text-center"><a href="#">Followers</a></div>
                                <div class="col-4 text-center"><a href="#">Sales</a></div>
                                <div class="col-4 text-center"><a href="#">Friends</a></div>
                            </div>
                            <!--end::Row-->
                        </li>
                        <!--end::Menu Body-->
                        <!--begin::Menu Footer-->
                        <li class="user-footer">
                            <a href="#" class="btn btn-default btn-flat">Profile</a>
                            <a href="#" class="btn btn-default btn-flat float-end">Sign out</a>
                        </li>
                        <!--end::Menu Footer-->
                    </ul>
                </li>
                <!--end::User Menu Dropdown-->
            </ul>
            <!--end::End Navbar Links-->
        </div>
        <!--end::Container-->
    </nav>
    <!--end::Header-->
    <!--begin::Sidebar-->
    <aside class="app-sidebar bg-body-secondary shadow" data-bs-theme="dark">
        <!--begin::Sidebar Brand-->
        <div class="sidebar-brand">
            <!--begin::Brand Link-->
            <a href="/Home/Index" class="brand-link">
                <!--begin::Brand Image-->
                <img
                    src="~/assets/img/beu.png"
                    alt="BEU Logo"
                    class="brand-image opacity-75 shadow"
                />
                <!--end::Brand Image-->
                <!--begin::Brand Text-->
                <span class="brand-text fw-light">BEU</span>
                <!--end::Brand Text-->
            </a>
            <!--end::Brand Link-->
        </div>
        <!--end::Sidebar Brand-->
        <!--begin::Sidebar Wrapper-->
        <div class="sidebar-wrapper">
            <nav class="mt-2">
                <!--begin::Sidebar Menu-->
                <ul
                    class="nav sidebar-menu flex-column"
                    data-lte-toggle="treeview"
                    role="menu"
                    data-accordion="false"
                >
                    <li class="nav-item">
                        <a href="~/Home/Index"
                           class="nav-link @(ViewData["ActivePage"]?.ToString() == "Index" ? "active" : "")">
                            <i class="nav-icon bi bi-speedometer"></i>
                            <p>Dashboard</p>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="~/Student/Announces"
                           class="nav-link @(ViewData["ActivePage"]?.ToString() == "Announces" ? "active" : "")">
                            <i class="nav-icon bi bi-megaphone"></i>
                            <p>Announces</p>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="~/Student/Programs"
                           class="nav-link @(ViewData["ActivePage"]?.ToString() == "Programs" ? "active" : "")">
                            <i class="nav-icon bi bi-building"></i>
                            <p>Programs</p>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="~/Student/Courses"
                           class="nav-link @(ViewData["ActivePage"]?.ToString() == "Courses" ? "active" : "")">
                            <i class="nav-icon bi bi-table"></i>
                            <p>Courses</p>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="~/Student/Grades"
                           class="nav-link @(ViewData["ActivePage"]?.ToString() == "Grades" ? "active" : "")">
                            <i class="nav-icon bi bi-star-fill"></i>
                            <p>Grades</p>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="~/Student/Transcript"
                           class="nav-link @(ViewData["ActivePage"]?.ToString() == "Transcript" ? "active" : "")">
                            <i class="nav-icon bi bi-file-earmark-text-fill"></i>
                            <p>Transcript</p>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="~/Student/Attendance"
                           class="nav-link @(ViewData["ActivePage"]?.ToString() == "Attendance" ? "active" : "")">
                            <i class="nav-icon bi bi-check2-square"></i>
                            <p>Attendance</p>
                        </a>
                    </li>
                    <li class="nav-item @(ViewData["ActivePage"]?.ToString() == "Contact" ? "" : "d-none")">
                        <a href="~/Home/Contact"
                           class="nav-link active">
                            <i class="nav-icon bi bi-person-raised-hand"></i>
                            <p>Contact</p>
                        </a>
                    </li>
                </ul>
                <!--end::Sidebar Menu-->
            </nav>
        </div>
        <!--end::Sidebar Wrapper-->
    </aside>
    <!--end::Sidebar-->
    <!--begin::App Main-->
    <main class="app-main">
        @RenderBody()
    </main>
    <!--end::App Main-->
    <!--begin::Footer-->
    <footer class="app-footer">
        <!--begin::To the end-->
        <div class="float-end d-none d-sm-inline">2025</div>
        <!--end::To the end-->
    </footer>
    <!--end::Footer-->
</div>
<!--end::App Wrapper-->
