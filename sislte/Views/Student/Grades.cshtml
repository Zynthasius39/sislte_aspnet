<!--begin::App Content-->
<div class="app-content">
  <!--begin::Container-->
  <div class="container-fluid">
    <div class="row">
      <h1>Grades</h1>
    </div>
    <div class="row">
      <div class="card">
        <div class="card-body table-responsive p-0">
          <table class="table table-hover text-nowrap">
            <thead>
            <tr>
              <th>Code</th>
              <th>Name</th>
              <th>SDF 1</th>
              <th>SDF 2</th>
              <th>ATT</th>
              <th>IW</th>
              <th>Final</th>
              <th>Sum</th>
              <th>Mark</th>
            </tr>
            </thead>
            <tbody>
            @foreach (var grade in @ViewBag.Grades)
            {
              <tr class="align-middle">
                <td><span class="tag tag-success">@grade.Code</span></td>
                <td>@(grade.Name ?? "")</td>
                <td>@((grade.Act1 == -1) ? "" : grade.Att)</td>
                <td>@((grade.Act2 == -1) ? "" : grade.Att)</td>
                <td>@((grade.Att == -1) ? "" : grade.Att)</td>
                <td>@((grade.Iw == -1) ? "" : grade.Att)</td>
                <td>@((grade.Final == -1) ? "" : grade.Att)</td>
                <td>@((grade.Sum == -1) ? "" : grade.Att)</td>
                <td>
                  <div class="rounded-circle d-flex align-items-center justify-content-center text-white fw-bold"
                       style="width: 30px; height: 30px; font-size: 20px; background-color: @StudentController.GetColorForMark(StudentController.GetMarkForSum(grade.Sum)); box-shadow: 0 2px 6px rgba(0,0,0,0.4);">
                    @grade.Mark
                  </div>
                </td>
              </tr>
            }
            </tbody>
          </table>
        </div>
        <!-- /.card-body -->
      </div>
    </div>
  </div>
</div>
