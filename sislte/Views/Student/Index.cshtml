@model sislte.ViewModels.StudentHomeViewModel;
@{
    Layout = "_StudentLayout";
}
<div class="content-wrapper" style="min-height: 1604.8px;">
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Dashboard</h1>
                </div>
            </div>
        </div>
    </section>
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-3">
                    <div class="card card-primary card-outline">
                        <div class="card-body box-profile">
                            <div class="text-center">
                                <img class="profile-user-img img-fluid img-circle"
                                     src="@Model.DetailedStudent.Student.AvatarURL"
                                     alt="Student Profile Picture">
                            </div>
                            <h3 class="profile-username text-center">@Model.DetailedStudent.FullName</h3>
                            <p class="text-muted text-center">@Model.DetailedStudent.Transcript.StudentCourseProgram.Name</p>
                            <ul class="list-group list-group-unbordered mb-3">
                                <li class="list-group-item">
                                    <b>GPA</b> <a class="float-right">@Model.DetailedStudent.Gpa</a>
                                </li>
                                <li class="list-group-item">
                                    <b>Courses</b> <a
                                        class="float-right">@Model.DetailedStudent.Transcript.StudentCourseProgram.StudentSemesters.Count</a>
                                </li>
                            </ul>
                        </div>
                    </div>
                    <div class="card card-primary">
                        <div class="card-header">
                            <h3 class="card-title">About Me</h3>
                            <a class="nav-link" asp-action="EditAboutMe">
                                <i class="bi bi-pencil"></i>
                            </a>
                        </div>
                        <!-- /.card-header -->
                        <div class="card-body">
                            <strong><i class="fas fa-book mr-1"></i> Education</strong>

                            <p class="text-muted">
                                @Model.DetailedStudent.Education
                            </p>

                            <hr>

                            <strong><i class="fas fa-map-marker-alt mr-1"></i> Location</strong>

                            <p class="text-muted">
                                @Model.DetailedStudent.Location
                            </p>

                            <hr>

                            <strong><i class="fas fa-pencil-alt mr-1"></i> Skills</strong>

                            <p class="text-muted">
                                @string.Join(" | ", Model.DetailedStudent.Skills)
                            </p>

                            <hr>

                            <strong><i class="far fa-file-alt mr-1"></i> Notes</strong>

                            <p class="text-muted">Lorem ipsum dolor sit amet, consectetur adipiscing elit. Etiam
                                fermentum enim neque.</p>
                        </div>
                        <!-- /.card-body -->
                    </div>
                </div>
                <div class="col-md-9">
                    <div class="card">
                        <div class="card-header">
                            <h3 class="card-title">Detailed Information</h3>
                        </div>
                        <!-- /.card-header -->
                        <div class="card-body table-responsive p-0">
                            <table class="table table-hover text-nowrap">
                                <tbody>
                                <tr>
                                    <td>Full Name</td>
                                    <td>@Model.DetailedStudent.FullName</td>
                                </tr>
                                <tr>
                                    <td>Phone</td>
                                    <td>@Model.DetailedStudent.Phone</td>
                                </tr>
                                <tr>
                                    <td>Emergency Phone</td>
                                    <td>@Model.DetailedStudent.EmergencyPhone</td>
                                </tr>
                                <tr>
                                    <td>Earned Credits</td>
                                    <td>@Model.DetailedStudent.EarnedCredits</td>
                                </tr>
                                <tr>
                                    <td>Loan Amount</td>
                                    <td>@Model.DetailedStudent.Loans</td>
                                </tr>
                                <tr>
                                    <td>Advisor</td>
                                    <td>@Model.DetailedStudent.Advisor.FullName</td>
                                </tr>
                                <tr>
                                    <td>Scholarship Amount</td>
                                    <td>@(Model.DetailedStudent.Scholarship?.Amount ?? 0)</td>
                                </tr>
                                <tr>
                                    <td>Birth Date</td>
                                    <td>@Model.DetailedStudent.BirthDate.ToLongDateString()</td>
                                </tr>
                                <tr>
                                    <td>Entrance Date</td>
                                    <td>@Model.DetailedStudent.EntranceDate.ToLongDateString()</td>
                                </tr>
                                <tr>
                                    <td>Graduation Date</td>
                                    <td>@Model.DetailedStudent.GraduateDate.ToLongDateString()</td>
                                </tr>
                                <tr>
                                    <td>Program Name</td>
                                    <td>@Model.DetailedStudent.Transcript.StudentCourseProgram.Name</td>
                                </tr>
                                </tbody>
                            </table>
                        </div>
                        <!-- /.card-body -->
                    </div>
                    <!-- /.card -->
                </div>
            </div>
        </div>
    </section>
</div>
