<div class="container my-5">
    <div class="card shadow-sm">
        <div class="card-body">
            <!-- Header Section -->
            <div class="row mb-4">
                <div class="col-6">
                    <h4 class="mb-0">University Name</h4>
                    <p class="text-muted">Baku Engineering University</p>
                </div>
                <div class="col-6 text-end">
                    <h5>Student Transcript</h5>
                    <p class="text-muted">Date: @DateOnly.FromDateTime(DateTime.Now)<span id="date"></span></p>
                </div>
            </div>

            <!-- Student Info Section -->
            <div class="row mb-4">
                <div class="col-sm-6">
                    <h6 class="fw-bold">Student Details</h6>
                    <p>Name: @ViewBag.FullName</p>
                    <p>Student ID: @ViewBag.StudentId</p>
                    <p>Program: @ViewBag.Program</p>
                </div>
                <div class="col-sm-6">
                    <h6 class="fw-bold">Contact Info</h6>
                    <p>Email: @ViewBag.Email</p>
                    <p>Phone: @ViewBag.Phone</p>
                </div>
            </div>

            <!-- Table Section for Courses and Grades -->
            <h6 class="fw-bold mb-3">Course Details</h6>
            @foreach (var semester in @ViewBag.Transcript.Semesters)
            {
                <div class="card-body table-bordered table-stripped">
                    <table class="table table-hover text-nowrap">
                        <thead>
                        <tr>
                            <th>Course Code</th>
                            <th>Name</th>
                            <th>Theory</th>
                            <th>ECTS</th>
                        </tr>
                        </thead>
                        <tbody>
                        @foreach (var course in semester.Courses)
                        {
                            <tr>
                                <td>@course.Code</td>
                                <td>@course.Name</td>
                                <td>@course.Theory</td>
                                <td>@course.Ects</td>
                            </tr>
                        }
                        </tbody>
                    </table>
                    <p><strong>SPA: </strong>@semester.Spa</p>
                </div>
            }
            <!-- Footer Section -->
            <div class="d-flex justify-content-between">
                <p><strong>Total Credits:</strong> @ViewBag.Transcript.Tacc</p>
                <p><strong>GPA:</strong> @ViewBag.Transcript.Gpa</p>
            </div>
        </div>
    </div>
</div>