@model ICollection<sislte.Models.Announce>;
<!--begin::App Content-->
<div class="app-content">
  <!--begin::Container-->
  <div class="container-fluid">
    <div class="row mb-2">
      <div class="col-sm-6">
        <h1>Announces</h1>
      </div>
    </div>
    <!--begin::Row-->
    <div class="row">
      @foreach (var announce in @Model)
      {
        <div class="card mb-3 shadow-sm border-0">
          <div class="card-body">
            <b>@announce.Title</b>
            <br/>
            <p>@announce.Message</p>
            <p class="text-muted small mb-0">
              <i class="bi bi-calendar-event me-1"></i>@announce.Date?.ToLongDateString()
              @* <span class="badge bg-success ms-2">New</span> *@
            </p>
          </div>
        </div>
      }
    </div>
    <!--end::Row-->
  </div>
  <!--end::Container-->
</div>
<!--end::App Content-->