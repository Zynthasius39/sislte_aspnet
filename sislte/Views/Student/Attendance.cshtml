                    <th scope="row">2</th>
                    <td>2025-05-02</td>
                    <td><span class="badge bg-danger">Absent</span></td>
                </tr>
                <tr>
                    <th scope="row">3</th>
                    <td>2025-05-03</td>
                    <td><span class="badge bg-warning">Late</span></td>
                </tr>
                <tr>
                    <th scope="row">4</th>
                    <td>2025-05-04</td>
                    <td><span class="badge bg-success">Present</span></td>
                </tr>
                <!-- More attendance rows can be added -->
                </tbody>
            </table>

            <!-- Footer Section -->
            <div class="d-flex justify-content-between">
                <p class="text-muted">Course: Computer Science - Semester 1</p>
            </div>
        </div>
    </div>
</div>