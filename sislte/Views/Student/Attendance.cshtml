<div class="container my-5">
    <div class="card shadow-sm">
        <div class="card-body">
            <!-- Header Section -->
            <div class="row mb-4">
                <div class="col-6">
                    <h4 class="mb-0">University Name</h4>
                    <p class="text-muted">Baku Engineering University</p>
                </div>
                <div class="col-6 text-end">
                    <h5>Attendance for: @ViewBag.Program - @ViewBag.SemesterNo</h5>
                    <p class="text-muted">Student: @ViewBag.Fullname</p>
                </div>
            </div>

            <!-- Attendance Table Section -->
            <h6 class="fw-bold mb-3">Attendance Record</h6>
            <table class="table table-bordered table-striped">
                <thead>
                <tr>
                    <th scope="col">Course</th>
                    <th scope="col">Date</th>
                    <th scope="col">Presence</th>
                </tr>
                </thead>
                <tbody>
                @foreach (var attendance in @ViewBag.Attendances) {
                <tr>
                    <th scope="row">@attendance.Course.Name</th>
                    <td>@attendance.Date.ToLongDateString()</td>
                    <td><span class="badge @attendance.GetBootstrapClass()">@attendance.GetPresenceAsString()</span></td>
                </tr>
                }
                </tbody>
            </table>

            <!-- Footer Section -->
            <div class="d-flex justify-content-between">
                <p class="text-muted">Course: @ViewBag.Program - @ViewBag.SemesterNo</p>
            </div>
        </div>
    </div>
</div>