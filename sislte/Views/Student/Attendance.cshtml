<div class="container my-5">
    <div class="card shadow-sm">
        <div class="card-body">
            <!-- Header Section -->
            <div class="row mb-4">
                <div class="col-6">
                    <h4 class="mb-0">University Name</h4>
                    <p class="text-muted">Student Attendance</p>
                </div>
                <div class="col-6 text-end">
                    <h5>Attendance for: Computer Science - Semester 1</h5>
                    <p class="text-muted">Student: John Doe</p>
                </div>
            </div>

            <!-- Attendance Table Section -->
            <h6 class="fw-bold mb-3">Attendance Record</h6>
